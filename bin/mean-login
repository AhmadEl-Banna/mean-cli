'use strict';

var cli = require('../lib/cli'),
  program = require('commander');

program
  .description('Login to mean.io')
  .option('-u, --email <email>', 'Email')
  .option('-p, --password <password>', 'Password')
  .parse(process.argv);

var options = {
  email: program.email,
  password: program.password
};

if (!program.args.length) {
  console.error('error: email required');
  process.exit(1);
}
if (options)
	console.log(program);

var email = program.args[0];
var password = program.args[1];
if (program.email && program.password) {
	cli.login(email, password);
}