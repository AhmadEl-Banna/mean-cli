#!/usr/bin/env node

'use strict';

var cli = require('../lib/cli'),
    program = require('commander');

program
    .description('Installs a MEAN pattern.')
    .option('-f, --force', 'force')
    .parse(process.argv);

if (!program.args.length) {
    console.error('error: pattern name required');
    process.exit(1);
}

var options = {
    force: program.force
};

cli.pattern(program.args[0], options);
